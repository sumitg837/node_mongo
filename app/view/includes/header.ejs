<% if(session.user){ %>
  <header class="main-header">
    <a href="/dashboard" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>AD</b>TENTIO</b></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>AD</b>TENTIO</b></span>
    </a>
    
    <nav class="navbar navbar-fixed-top" role="navigation">
      
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- Messages: style can be found in dropdown.less-->
          <li class="dropdown messages-menu">
            <!-- Menu toggle button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-globe"></i>
              <span class="label label-success"><%= contacts.length %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="header">You have <%= contacts.length %> new contact queries.</li>
              <li>
                <!-- inner menu: contains the messages -->
                <ul class="menu">
                  <!-- start message -->
                  <% contacts.forEach((contact, index) => { %>
                  <% if(index >4){ %> 
                  <% return %>
                  <% } %>
                  <li class="<%= contact.read %>">
                    <a href="/view-notification/<%= contact._id %>/view">
                      <div class="pull-left">
                        <!-- User Image -->
                        <i class="fa fa-envelope-o fa-1x user_logo text-center"></i>
                      </div>
                      <!-- Message title and timestamp -->
                      <h4>
                        <%= contact.name %>
                        <small>
                        <i class="fa fa-clock-o"></i> <%= contact.create.toISOString().slice(0,10); %>
                        </small>
                      </h4>
                      <!-- The message -->
                      <p><%= contact.subject %></p>
                    </a>
                  </li>
                  
                  <% }); %>
                  <!-- end message -->
                </ul>
                <!-- /.menu -->
              </li>
              <li class="footer"><a href="/contact">See All Messages</a></li>
            </ul>
          </li>
          <!-- /.messages-menu -->

          
          <!-- User Account Menu -->
          <li class="dropdown user user-menu">
            <!-- Menu Toggle Button -->
            <a href="#" class="dropdown-toggle pad_8" data-toggle="dropdown">
              <!-- The user image in the navbar-->
              <img src="/assets/img/user.png" class="img-circle user_logo" alt="User Image">
              <!-- hidden-xs hides the username on small devices so only the image appears. -->
              <span class="hidden-xs"><%= session.user ? session.user.name : '' %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- The user image in the menu -->
              <li class="user-header">
                <img src="/assets/img/user.png" class="img-circle" alt="User Image">

                <p>
                  <%= session.user ? session.user.name : '' %> - Adtentio
                  <!--small> since Nov. 2017</small-->
                </p>
              </li>
              <!-- Menu Body -->
              <li class="user-body">
                <!--div class="row">
                  <div class="col-xs-4 text-center">
                    <a href="#">Followers</a>
                  </div>
                  <div class="col-xs-4 text-center">
                    <a href="#">Sales</a>
                  </div>
                  <div class="col-xs-4 text-center">
                    <a href="#">Friends</a>
                  </div>
                </div-->
                <!-- /.row -->
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <!--div class="pull-left">
                  <a href="#" class="btn btn-default btn-flat">Profile</a>
                </div-->
                <div class="pull-right">
                  <a href="/logout" class="btn btn-default btn-flat">Sign out</a>
                </div>
              </li>
            </ul>
          </li>
          <!-- Control Sidebar Toggle Button -->
          <!--<li>
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
          </li>-->
        </ul>
      </div> 
    </nav>
  </header>
<% } %>
   
        