<% extend('./layout/main') %>
<%- include('./includes/sidebar') -%>
 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header top_50">
       
      <h1>
        Contact Queries
      </h1>
      <ol class="breadcrumb">
        <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Adtentio</a></li>
        <li class="active">Contact query</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
                <div id="ses_msg">
                   <% if ( sessionFlash && sessionFlash.message) { %>
                    
                        <div class="alert alert-<%= sessionFlash.type %>">
                            <strong>FLASH!</strong> <%= sessionFlash.message %>
                        </div>
                    
                    <% } %>
                </div>
                <div class="row text-center pad-top side-cont" id="contact">
                    <!--<h3>
                        <a class="btn btn-info pull-right option_link" data-datac="addadvertisement">Add Advertisement</a>
                    </h3>-->
                    <div class="table-responsive col-sm-12 pad-top">
                        <table id="contacts" class="table table-striped table-bordered" width="100%"  cellspacing="0">
                            <thead>
                                <tr>
                                    <th>S. No.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Subject</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>S. No.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Subject</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                <% contact.forEach((contact, index) => { %>
                                <tr class="<%= contact.read %>">
                                    
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <a href="/view-notification/<%= contact._id %>/view"><%=  contact.name %></a>
                                    </td>
                                    <td>
                                        <a href="/view-notification/<%= contact._id %>/view"><%= contact.email %></a>
                                    </td>
                                    <td><%= contact.subject %></td>
                                    <td><%= contact.create.toISOString().slice(0,10); %></td>
                                    <td> 
                                        <!--<a class="ad_edit" data-datac="<%=  %>"><i class="fa fa-pencil"></i>
                                        </a> |--> 
                                        <a data-datac="/contact/<%= contact._id %>/remove" data-toggle="modal" data-target="#myModal2" class="contact_delete">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                        <!--<a href="/contact/<%=  %>/remove" id="delete-advertisement">
                                            <i class="fa fa-trash"></i>
                                        </a>-->
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
               
            </div>
        </div>
</div>
</section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<!--modal-->
    <!-- The Modal -->
<div class="modal fade" id="myModal2">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Confirm Delete!</h4>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <h3 class="text-center">Are You Sure?</h3>
        
        
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
            <button type="button" class="btn btn-secondary pull-right" data-dismiss="modal">Cancel</button>
            
            <a href="" class="btn btn-danger pull-right" id="delete_contact">Delete</a>
      </div>

    </div>
  </div>
</div>
<!--end-->
<button type="button" id="driver_modal" class="btn btn-primary hidden" data-toggle="modal" data-target="#myModal1">
</button>