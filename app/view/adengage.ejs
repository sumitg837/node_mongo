<% extend('./layout/main') %>
<%- include('./includes/sidebar') -%>
 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header top_50">
       
      <h1>
        Engaged ADs 
      </h1>
      <ol class="breadcrumb">
        <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Adtentio</a></li>
        <li class="active">Ad-engage</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
                <div id="ses_msg">
                   <% if ( sessionFlash && sessionFlash.message) { %>
                    
                        <div class="alert alert-<%= sessionFlash.type %>">
                            <strong>FLASH!</strong> <%= sessionFlash.message %>
                        </div>
                    
                    <% } %>
                </div>
                <div class="row text-center pad-top side-cont" id="adengage">
                    
                    <div class="table-responsive col-sm-12 pad-top">
                        <table id="adengages" class="table table-striped table-bordered" width="100%"  cellspacing="0">
                            <thead>
                                <tr>
                                    <th>S. No.</th>
                                    <th>Driver ID</th>
                                    <th>AD.Name</th>
                                    <th>Type</th>
                                    <th>Duration</th>
                                    <th>No. of Clicks</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>S. No.</th>
                                    <th>Driver ID</th>
                                    <th>AD. Name</th>
                                    <th>Type</th>
                                    <th>Duration</th>
                                    <th>No. of Clicks</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                <% adengages.forEach((adEngage, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <%=  adEngage.driver_id.driver_id %>
                                    </td>
                                    <td>
                                        <%=  adEngage.advertisement_id.name %>
                                    </td>
                                    <td><%= adEngage.advertisement_id.type %></td>
                                    <td><%= adEngage.advertisement_id.duration %></td>
                                    <td> 
                                        <%= adEngage.no_of_click %>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </div>
        </div>
</div>
</section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
